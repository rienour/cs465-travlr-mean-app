<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
      {{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								<h3>Latest News</h3>
								<ul>
                  {{#each recents}}
									<li>
										<a href="/news">{{ headline }}</a>
									</li>
                  {{/each}}
								</ul>
								<h3>Vaction Tips</h3>
								<ul>
                  {{#each tips}}
									<li>
										<a href="/news">{{ title }}</a>
									</li>
                  {{/each}}
								</ul>
							</div>
							<div>
								<h1>News</h1>
                {{#with story}}
								<img src="images/{{ image }}" alt="Img">
								<h2>{{ headline }}</h2>
								<span class="time">{{ date }}<br> by: {{ author }}</span>
                {{#each paragraphs}}
								<p>
									{{this}}
								</p>
                {{/each}}
                {{/with}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
    {{> footer}}
	</div>
</body>
</html>
